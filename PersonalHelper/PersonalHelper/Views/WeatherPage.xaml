<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalHelper.Views.WeatherPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
             xmlns:ViewModels="clr-namespace:PersonalHelper.ViewModels">
    <ContentPage.BindingContext>
        <ViewModels:MainPageVM />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout Orientation="Horizontal"
                             Margin="7,5,0,0">
                    <ImageButton Source="next.png"
                                 Rotation="180"
                                 HeightRequest="45"
                                 Command="{Binding BackToMainPage}" />
                    <Label Text="Погода"
                           FontSize="40" />
                </StackLayout>
                <Label Text="Погода на текущий день"
                       HorizontalOptions="Center"
                       FontSize="20"
                       Margin="15,0,0,0" />

                <Label Text="Погода"
                           FontSize="40" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenWeatherForOneDay}"/>
                    </Label.GestureRecognizers>
                </Label>

                <CollectionView ItemsSource="{Binding OpenWeatherForOneDay}"
                                ItemsLayout="HorizontalList"
                                HeightRequest="330"
                                x:Name="newsView"
                                Margin="10,0,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Frame CornerRadius="0"
                                       Padding="1">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenNews, Source={x:Reference Name=newsView}}"
                                                              CommandParameter="{Binding url}" />
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Image Source="{Binding urlToImage}"
                                               HeightRequest="170" />
                                        <Label Text="{Binding title}"
                                               FontSize="20"
                                               MaxLines="2"
                                               WidthRequest="170"
                                               Margin="15,0,0,0" />
                                        <Rectangle HeightRequest="2"
                                                   BackgroundColor="DarkOrange"
                                                   Margin="10,0,10,2" />
                                        <Label Text="{Binding description}"
                                               FontSize="16"
                                               MaxLines="5"
                                               WidthRequest="170"
                                               Margin="15,0,0,0" />
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <CollectionView ItemsSource="{Binding NewsCategoriesCollection}"
                                x:Name="newsCategoryView"
                                Margin="15,0,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Удалить"
                                                   IconImageSource="info.png"
                                                   BackgroundColor="DarkRed" />
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <StackLayout>
                                    <Label Text="{Binding Keyword}"
                                           FontSize="30" />
                                    <CollectionView ItemsSource="{Binding ArticlesCollection}"
                                                    x:Name="newsCollection"
                                                    ItemsLayout="HorizontalList"
                                                    Margin="10,0,0,0"
                                                    HeightRequest="330">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Frame CornerRadius="0"
                                                           Padding="1">
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenNews, Source={x:Reference Name=newsCategoryView}}"
                                                                                  CommandParameter="{Binding url}" />
                                                        </Frame.GestureRecognizers>
                                                        <StackLayout>
                                                            <Image Source="{Binding urlToImage}"
                                                                   HeightRequest="170" />
                                                            <Label Text="{Binding title}"
                                                                   FontSize="20"
                                                                   MaxLines="2"
                                                                   WidthRequest="170"
                                                                   Margin="15,0,0,0" />
                                                            <Rectangle HeightRequest="2"
                                                                       BackgroundColor="DarkOrange"
                                                                       Margin="10,0,10,2" />
                                                            <Label Text="{Binding description}"
                                                                   FontSize="16"
                                                                   MaxLines="5"
                                                                   WidthRequest="170"
                                                                   Margin="15,0,0,0" />
                                                        </StackLayout>
                                                    </Frame>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>