<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalHelper.Views.Settings"
             xmlns:ViewModels="clr-namespace:PersonalHelper.ViewModels"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <ViewModels:SettingsVm />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Margin="7,5,0,0">
                <ImageButton Source="next.png"
                             Rotation="180"
                             HeightRequest="45"
                             Command="{Binding BackToMainPage}" />
                <Label Text="Настройки"
                       FontSize="40" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>