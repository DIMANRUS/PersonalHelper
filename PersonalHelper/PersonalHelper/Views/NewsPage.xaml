<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalHelper.Views.NewsPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
             xmlns:ViewModels="clr-namespace:PersonalHelper.ViewModels">
    <ContentPage.BindingContext>
        <ViewModels:NewsPageVM />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal"
                         Margin="7,5,0,0">
                <ImageButton Source="next.png"
                             Rotation="180"
                             HeightRequest="45"
                             Command="{Binding BackToMainPage}" />
                <Label Text="Новости"
                       FontSize="40" />
            </StackLayout>
            <Label Text="Новости в городе" FontSize="30" Margin="15,0,0,0"/>
            <CollectionView ItemsSource="{Binding NewsCityCollection}"
                            ItemsLayout="HorizontalList"
                            HeightRequest="330"
                            x:Name="newsView"
                            Margin="10,0,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Frame CornerRadius="0"
                                   Padding="1">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenNews, Source={x:Reference Name=newsView}}"
                                                          CommandParameter="{Binding url}" />
                                </Frame.GestureRecognizers>
                                <StackLayout>
                                    <Image Source="{Binding urlToImage}"
                                           HeightRequest="170" />
                                    <Label Text="{Binding title}"
                                           FontSize="20"
                                           MaxLines="2"
                                           WidthRequest="170"
                                           Margin="15,0,0,0" />
                                    <Rectangle HeightRequest="2"
                                               BackgroundColor="DarkOrange"
                                               Margin="10,0,10,2" />
                                    <Label Text="{Binding description}"
                                           FontSize="16"
                                           MaxLines="5"
                                           WidthRequest="170"
                                           Margin="15,0,0,0" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>