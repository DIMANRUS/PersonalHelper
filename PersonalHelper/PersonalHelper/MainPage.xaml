<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalHelper.MainPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
             xmlns:ViewModels="clr-namespace:PersonalHelper.ViewModels"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <ViewModels:MainPageVM />
    </ContentPage.BindingContext>
    <StackLayout>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center">
            <Label Text="{Binding HelloUserName}"
                   HorizontalOptions="Center"
                   Margin="10"
                   FontSize="30" />
            <ImageButton Source="SettingsIcon.png"
                         HeightRequest="35"
                         Command="{Binding OpenSettings}" />
        </StackLayout>
        <Frame Padding="7">
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Image Source="WheatherBlockIcon.png"
                           HeightRequest="20" />
                    <Label Text="Погода"
                           FontSize="15" />
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center">
                    <Label Text="{Binding City}"
                           FontSize="20"
                           Margin="0,5,7,0" />
                    <Image Source="WheatherIconSun.png"
                           HeightRequest="40" />
                    <Label Text="{Binding Wheather.main.temp, Mode=TwoWay}"
                           FontSize="20"
                           Margin="0,5,0,0" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>